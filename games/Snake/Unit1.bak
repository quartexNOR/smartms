    window.onkeydown = function(e)
    {
    TCanvasProject.KeyDownEvent(Self,e.keyCode);
    }
    window.focus();
  end;
  KeyDownEvent(0);

  btnLeft := TW3Button.Create(Document);
  btnLeft.OnClick := lambda  xInc := -1; yInc := 0; end;
